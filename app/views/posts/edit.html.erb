<%= provide(:title, "Edit Post")%>


<div class="jumbotron">
      <div class="container">
        <div class="row">
          <div class="col-sm-5">

          </div>
          <div class="col-sm-7">
            <%= form_for @post do |f| %>
               
                
                <div class="form-group">
                  <%= f.label :title %>
                  <%= f.text_field :title, :class =>"form-control" %>
                </div>
                <div class="form-group">
                  <%= f.label :content %>
                  <%= f.text_area :content, :class =>"form-control" %>
                </div>
              
                
                <%= f.submit  "Save changes", :class => "btn btn-primary" %>
                
              <% end %>
    
          </div>
        </div>

      </div>
</div>